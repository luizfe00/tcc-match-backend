generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  name String
  email String @unique
  enrollment String @unique
  vacancies Int?
  role Role

  papers Paper[]
  orienteePaper Paper? @relation(name: "orientee_paper")
  themes Theme[]
  interests Interest[]
}

model Theme {
  id String @id @default(uuid())
  label String @unique
  summary String
  duration Int
  ownerId String

  paper Paper?
  interests Interest[]
  owner User @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime? 
}

model Interest {
  id String @id @default(uuid())
  text String
  ownerId String
  themeId String

  theme Theme @relation(fields: [themeId], references: [id])
  owner User @relation(fields: [ownerId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Paper {
  id String @id @default(uuid())
  documentUrl String?
  approved Boolean @default(false)
  type PaperType @default(PTCC)

  studentId String @unique
  professorId String
  themeId String @unique
  
  theme Theme @relation(fields: [themeId], references: [id], onDelete: Cascade)
  orientee User @relation(fields: [studentId], references: [id], onDelete: Cascade, name: "orientee_paper")
  advisor User @relation(fields: [professorId], references: [id], onDelete: Cascade)
  stages Stage[]

  startDate DateTime
  endDate DateTime

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime? 
}

model Stage {
  id String @id @default(uuid())
  label String
  paperId String 
  
  paper Paper @relation(fields: [paperId], references: [id])
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  STUDENT
  TEACHER
  COORDINATOR
}

enum PaperType {
  PTCC
  TCC
}