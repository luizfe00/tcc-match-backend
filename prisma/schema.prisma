generator client {
  provider = "prisma-client-js"
  seed    = "prisma/seed/seed.ts"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  name String
  email String @unique
  enrollment String @unique
  role Role
  professorActive Boolean @default(true)

  papers Paper[]
  orienteePaper Paper? @relation(name: "orientee_paper")
  themes Theme[]
  interests Interest[]
  categories Categories[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?
}

model Theme {
  id String @id @default(uuid())
  label String @unique
  summary String
  ownerId String
  startDate DateTime @default(now())
  duration Int

  paper Paper?
  interests Interest[]
  owner User @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  categories Categories[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime? 
}

model Interest {
  id String @id @default(uuid())
  text String
  ownerId String
  themeId String
  approved Boolean @default(false)

  theme Theme @relation(fields: [themeId], references: [id], onDelete: Cascade)
  owner User @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Paper {
  id String @id @default(uuid())
  ptccDocumentUrl String?
  tccDocumentUrl String?
  type PaperType @default(PTCC)
  status PaperStatus @default(PENDING)

  studentId String @unique
  professorId String
  themeId String @unique
  approvals Approval[]
  
  theme Theme @relation(fields: [themeId], references: [id], onDelete: Cascade)
  orientee User @relation(fields: [studentId], references: [id], onDelete: Cascade, name: "orientee_paper")
  advisor User @relation(fields: [professorId], references: [id], onDelete: Cascade)
  stages Stage[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime? 
  completedAt DateTime?
}

model Stage {
  id String @id @default(uuid())
  label String
  paperId String 
  viewed Boolean @default(false)
  feedback String?
  message String?

  
  paper Paper @relation(fields: [paperId], references: [id])
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Approval {
  id String @id @default(uuid())
  approval Boolean?
  response String?
  type PaperType @default(PTCC)
  status ApprovalStatus @default(PENDING)

  paperId String
  paper Paper @relation(fields: [paperId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Categories {
  id String @id @default(uuid())
  name String @unique
  description String?

  themes Theme[]
  users User[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?
}

model SystemConfiguration {
  id Int @id @default(autoincrement())
  activeProfessors String
  preRequisites String
  minCredits Int
  minPeriods Int
  reminderTemplate String
  reminderDaysBefore Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  STUDENT
  TEACHER
  COORDINATOR
  ADMIN
}

enum PaperType {
  PTCC
  TCC
}

enum PaperStatus {
  PENDING
  ONGOING
  REJECTED
  COMPLETED
}

enum ApprovalStatus {
  PENDING
  APPROVED
  REJECTED
}